<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_aboutproduct"

        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_aboutproduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:popupTheme="@style/AppTheme.PopupOverlay"
        android:elevation="2dp"

        >
      <!--
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end|center"
            android:paddingEnd="60dp"
            android:paddingRight="60dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/action_product_Bag"
                android:title="Go To Cart"
                android:src="@drawable/ic_shopping_cart_white_18dp"
                android:layout_gravity="end"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">


            </ImageView>
        </LinearLayout>
      -->
    </android.support.v7.widget.Toolbar>

  </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:fillViewport="true"
           android:layout_weight="1"
           >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">



            <android.support.v7.widget.CardView
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="4dp"
                android:layout_width="340dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_weight="0.2"
                >

               <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/product_desc_image"
                android:layout_gravity="center"
                android:src="@drawable/glim"
                />
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="4dp"
                android:layout_width="340dp"
                android:layout_height="200dp"
                app:cardUseCompatPadding="true"

                card_view:cardPreventCornerOverlap="false"
                android:layout_gravity="center"
                android:layout_weight="0.2"

                android:layout_marginLeft="60dp"
                android:layout_marginStart="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginEnd="60dp"
                android:layout_marginTop="16dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvproduct_desc_price"
                        android:text="Price:"
                        android:paddingLeft="30dp"
                        android:paddingStart="30dp"
                        android:layout_marginTop="20dp"
                        android:textSize="20sp"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="4dp"
                android:layout_width="340dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_weight="0.2"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvproduct_desc_about"
                        android:text="About:"

                        android:layout_marginTop="20dp"
                        android:paddingLeft="30dp"
                        android:paddingStart="30dp"
                        android:textSize="20sp"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="4dp"
                android:layout_width="340dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvproduct_desc_info"
                        android:text="More:"
                        android:paddingLeft="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:textSize="20sp"
                        />
                </LinearLayout>
             </android.support.v7.widget.CardView>

       </LinearLayout>
   </ScrollView>



     <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:gravity="fill_vertical"
        >
        <Button
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:gravity="fill_vertical"
            android:background="#546E7A"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:id="@+id/tvseparator1"
            android:layout_gravity="center"
            android:foregroundGravity="fill_horizontal"
            android:gravity="fill_horizontal"
            android:background="#9E9E9E"
            />
        <Button
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:text="ADD TO BAG"
            android:background="#546E7A"
            android:layout_gravity="fill_vertical"
            />
      </LinearLayout>

   </LinearLayout>
</LinearLayout>
